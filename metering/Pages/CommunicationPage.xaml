<local:BasePage
    x:TypeArguments="core:CommunicationViewModel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:metering" 
    xmlns:core="clr-namespace:metering.core;assembly=metering.core" 
    xmlns:resources="clr-namespace:metering.Resources"
    x:Class="metering.CommunicationPage"    
    mc:Ignorable="d">
  
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Ip Address Textbox-->
                <ColumnDefinition />
                
                <!-- Port Number textbox-->
                <ColumnDefinition />
                
                <!-- Connect button-->
                <ColumnDefinition />
                
                <!-- Log textbox-->
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <!-- Ip Address Textbox-->
            <Grid Grid.Column="0">
                <Grid>                    
                    <Viewbox>
                        <!-- IPADDRESS textbox -->
                        <TextBox 
                            materialDesign:HintAssist.Hint="{x:Static resources:Strings.tab_home_ipaddress}"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                            TabIndex="0" 
                            Padding="5"
                            Margin="5"
                            Text="{Binding IpAddress, UpdateSourceTrigger=PropertyChanged}"/>
                        
                    </Viewbox>                    
                </Grid>             
            </Grid>

            <!-- Port Number textbox-->
            <Grid Grid.Column="1">
                                          
                <!-- PORT textbox -->
                <Viewbox>
                    <TextBox 
                        materialDesign:HintAssist.Hint="{x:Static resources:Strings.tab_home_port}"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                        TabIndex="1" 
                        Padding="5"
                        Margin="5"
                        Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}"/>
                </Viewbox>
             </Grid>

            <!-- Connect button-->
            <Grid Grid.Column="2">
                <Border>
                    <Viewbox>
                        <!-- Connect/Disconnect Button -->
                        <ToggleButton
                            Style="{DynamicResource MetroCircleToggleButtonStyle}"
                            TabIndex="2"
                            Padding="10"
                            Content="{Binding ConnectCommandContent}"
                            Command="{Binding ConnectCommand}"
                            CommandParameter="{Binding IsChecked, RelativeSource={RelativeSource Self}}">
                                
                        </ToggleButton>
                    </Viewbox>
                </Border>
            </Grid>

            <!-- Log textbox-->
            <Grid Grid.Column="3">
                <Border>
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto">
                        <!-- Log textbox -->
                        <TextBox 
                            Padding="5" 
                            Margin="5"
                            TextWrapping="Wrap" 
                            BorderBrush="#FBFFFFC0" 
                            FontSize="14"                            
                            Text="{Binding Log}"
                            TextAlignment="Right"
                            IsReadOnly="True">
                        </TextBox>

                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</local:BasePage>
