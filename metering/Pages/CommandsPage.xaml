<local:BasePage
    x:TypeArguments="local:CommandsViewModel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:metering" 
    x:Class="metering.CommandsPage"
    mc:Ignorable="d" 
    d:DesignHeight="80" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Future use -->
        <Viewbox Grid.Column="0"
                  Margin="10 5">
            <Button
                Style="{DynamicResource MahApps.Metro.Styles.MetroCircleButtonStyle}" 
                Width="50"
                Height="50">

            </Button>

        </Viewbox>
        
        <!-- Add New Test Button-->
        <Viewbox Grid.Column="1" 
                 Margin="10 5">
            <Controls:Tile 
                Title="{Binding AddNewTestCommandTitle}"
                Margin="1,0,0,0" 
                TabIndex="9"
                Width="266"
                Height="80"
                VerticalTitleAlignment="Bottom" 
                HorizontalTitleAlignment="Center" 
                Background="Lime"
                IsDefault="True"
                Command="{Binding AddNewTestCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource Self}}">

                <!-- + sign icon on the button -->
                <Grid>
                    <iconPacks:PackIconFontAwesome Kind="PlusSolid" Height="50" Width="50" Margin="0,-17.017,0,0" BorderBrush="Black"/>
                </Grid>
                
            </Controls:Tile>
        </Viewbox>

        <!-- Cancel Button -->
        <Viewbox Grid.Column="2"
                 Margin="10 5">
            <Controls:Tile 
                Title="Cancel" 
                Margin="1,0,0,0"
                TabIndex="8"
                Width="266"
                Height="80"
                VerticalTitleAlignment="Bottom" 
                HorizontalTitleAlignment="Center"
                Background="Red"
                IsCancel="True"
                Command="{Binding Path=CancelNewTestCommand}">

                <!-- cancel icon on the button -->
                <Grid>
                    <iconPacks:PackIconMaterial Kind="Cancel" Height="50" Width="50" Margin="0,-17.017,0,0"/>
                </Grid>
            </Controls:Tile>
        </Viewbox>

    </Grid>
</local:BasePage>
