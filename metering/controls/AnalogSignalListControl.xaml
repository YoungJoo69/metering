<UserControl x:Class="metering.AnalogSignalListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:metering"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="650">
    
    <UserControl.Template>
        <ControlTemplate TargetType="UserControl">
            <Grid DataContext="{x:Static local:AnalogSignalDesignModel.Instance}" Background="DarkKhaki">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding AnalogSignals}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <local:AnalogSignalListItemControl/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>
