{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "size": "Medium",
          "weight": "Bolder",
          "text": "Add a new test"
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "items": [
                {
                  "type": "Input.ChoiceSet",
                  "id": "testType",
                  "placeholder": "Select a test",
                  "choices": [
                    {
                      "title": "Voltage",
                      "value": "voltage"
                    },
                    {
                      "title": "not implemented",
                      "value": "current"
                    },
                    {
                      "title": "not implemented",
                      "value": "frequency"
                    },
                    {
                      "title": "not implemented",
                      "value": "phase"
                    }
                  ]
                }
              ],
              "width": "stretch"
            },
            {
              "type": "Column",
              "items": [
                {
                  "type": "Input.Text",
                  "id": "register",
                  "placeholder": "Register Number"
                }
              ],
              "width": "stretch"
            },
            {
              "type": "Column",
              "items": [
                {
                  "type": "Input.Text",
                  "id": "from",
                  "placeholder": "From"
                }
              ],
              "width": "stretch"
            },
            {
              "type": "Column",
              "items": [
                {
                  "type": "Input.Text",
                  "id": "to",
                  "placeholder": "To"
                }
              ],
              "width": "stretch"
            },
            {
              "type": "Column",
              "items": [
                {
                  "type": "Input.Text",
                  "id": "delta",
                  "placeholder": "Delta"
                }
              ],
              "width": "stretch"
            },
            {
              "type": "Column",
              "items": [
                {
                  "type": "Input.Text",
                  "id": "dwellTime",
                  "placeholder": "Dwell Time"
                }
              ],
              "width": "stretch"
            },
            {
              "type": "Column",
              "items": [
                {
                  "type": "Input.Text",
                  "id": "startDelayTime",
                  "placeholder": "Delay Time"
                }
              ],
              "width": "stretch"
            },
            {
              "type": "Column",
              "items": [
                {
                  "type": "Input.Text",
                  "id": "measurementInterval",
                  "placeholder": "Measurement Interval"
                }
              ],
              "width": "stretch"
            },
            {
              "type": "Column",
              "items": [
                {
                  "type": "Input.Text",
                  "id": "startMeasurementDelay",
                  "placeholder": "Measurement Delay"
                }
              ],
              "width": "stretch"
            }
          ]
        }
      ]
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch"
        },
        {
          "type": "Column",
          "width": "stretch"
        },
        {
          "type": "Column",
          "width": "stretch"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.ShowCard",
      "title": "Set due date",
      "card": {
        "type": "AdaptiveCard",
        "body": [
          {
            "type": "Input.Date",
            "id": "dueDate"
          },
          {
            "type": "Input.Text",
            "id": "comment",
            "placeholder": "Add a comment",
            "isMultiline": true
          }
        ],
        "actions": [
          {
            "type": "Action.OpenUrl",
            "title": "OK",
            "url": "http://adaptivecards.io"
          }
        ],
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
      }
    },
    {
      "type": "Action.OpenUrl",
      "title": "View",
      "url": "http://adaptivecards.io"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}