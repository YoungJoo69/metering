    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Test Settings -->
            <ColumnDefinition Width="Auto"/>

            <!-- Test Values -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.InputBindings>
            <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding SelectAllTextCommand}"/>
        </Grid.InputBindings>

        <!-- Analog signal values -->
        <Border
            Grid.Column="1" 
            BorderBrush="Black" 
            BorderThickness="1" 
            ClipToBounds="True">

            <Grid                 
                Margin="5">

                <!-- Analog signals list -->
                <local:AnalogSignalListControl
                    ClipToBounds="True"
                    d:DataContext="{x:Static core:AnalogSignalDesignModel.Instance}"
                    Padding="3"
                    local:FocusAndSelectProperty.Value="{Binding Selected}">
                </local:AnalogSignalListControl>
            </Grid>
        </Border>

        <!-- Register, Dwell Time, Start Delay Time, Measurement Interval and Start Measurement Delay-->
        <Border
            Grid.Column="0" 
            BorderBrush="Black" 
            BorderThickness="1" 
            ClipToBounds="True">

            <Grid Margin="5">

                <Grid.RowDefinitions>
                    <!-- Ramping Signal Selection -->
                    <RowDefinition />
                    <!-- Register -->
                    <RowDefinition />
                    <!-- Dwell Time -->
                    <RowDefinition />
                    <!-- Start Delay Time -->
                    <RowDefinition />
                    <!-- Measurement Interval -->
                    <RowDefinition />
                    <!-- Start Measurement Delay -->
                    <RowDefinition />
                </Grid.RowDefinitions>

                <ListBox
                    SelectedItem="{Binding Path=SelectedRampingSignal, UpdateSourceTrigger=PropertyChanged}"
                    Background="Transparent"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Center">
                    <TextBox
                        mD:HintAssist.Hint="Ramping"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                        Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                        TabIndex="0"
                        Padding="0 0 5 0"                 
                        HorizontalContentAlignment="Center" 
                        FontSize="18"
                        ToolTip="Select your Ramping Signal"
                        IsEnabled="False"/>

                    <RadioButton
                        Style="{StaticResource MaterialDesignUserForegroundRadioButton}"
                        Foreground="{StaticResource SecondaryAccentForegroundBrush}"
                        Content="Magnitude"
                        IsChecked="True"
                        Command="{Binding SelectRampingSignalCommand}" 
                        CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}"/>

                    <RadioButton
                        Style="{StaticResource MaterialDesignUserForegroundRadioButton}"
                        Foreground="{StaticResource SecondaryAccentForegroundBrush}"
                        Content="Phase"
                        Command="{Binding SelectRampingSignalCommand}" 
                        CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}"/>

                    <RadioButton
                        Style="{StaticResource MaterialDesignUserForegroundRadioButton}"
                        Foreground="{StaticResource SecondaryAccentForegroundBrush}"
                        Content="Frequency"
                        Command="{Binding SelectRampingSignalCommand}" 
                        CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}"/>
                    
                    <!--<ListBox.ItemTemplate>
